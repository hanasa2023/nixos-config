{
  "layer": "top",
  "position": "top",
  "modules-left": [
    "idle_inhibitor",
    "niri/workspaces",
    "custom/wallchange",
    "tray",
    "niri/window"
  ],
  "modules-center": ["custom/music"],
  "modules-right": [
    "backlight",
    "pulseaudio",
    "pulseaudio#microphone",
    "niri/language",
    "custom/gpuinfo",
    "cpu",
    "battery",
    "network",
    "clock",
    "custom/lock",
    "custom/power"
  ],
  "custom/icon": {
    "format": "󰣇 "
  },
  "niri/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": " ",
      "2": " ",
      "3": " ",
      "4": "󰉋 ",
      "5": " ",
      "active": " ",
      "default": " "
    }
  },
  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": " ",
      "2": " ",
      "3": " ",
      "4": "󰉋 ",
      "5": " ",
      "active": " ",
      "default": " "
    },
    "disable-scroll": true,
    "all-outputs": true,
    "on-click": "activate",
    "persistent-workspaces": {}
  },
  "custom/wallchange": {
    "format": "󰏘 {}",
    "exec": "echo ; echo 󰆊 switch wallpaper",
    "on-click": "~/.config/waybar/scripts/swwwallpaper.sh -n",
    "on-click-right": "~/.config/waybar/scripts/swwwallpaper.sh -p",
    "on-click-middle": "sleep 0.1 && ~/.config/waybar/scripts/swwwallselect.sh",
    "interval": 86400,
    "tooltip": true
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "󰣇 ",
      "deactivated": "󰣇 "
    }
  },
  "niri/window": {
    "format": "{}",
    "separate-outputs": true,
    "rewrite": {
      "~(.*)": "  ~$1",
      "(.*) - Mozilla Firefox": "󰈹  $1",
      "(.*)Mozilla Firefox": "󰈹  Firefox",
      "(.*) - Google Chrome": "  $1",
      "(.*) — Zen Browser": "󰫫 $1",
      "(.*) - Visual Studio Code": "󰨞  $1",
      "(.*)Visual Studio Code": "󰨞  Code",
      "(.*) — Dolphin": "󰉋  $1",
      "(.*)Spotify": "󰓇  Spotify",
      "(.*)Steam": "󰓓  Steam",
      "YesPlayMusic": "󰎆  YesPlayMusic",
      "nv (.*)": "  $1",
      "QQ": " 󰘅  QQ",
      "微信": " 󰘑  WeChat"
    },
    "max-length": 20
  },
  "hyprland/window": {
    "format": "{}",
    "separate-outputs": true,
    "rewrite": {
      "~(.*)": "  ~$1",
      "(.*) - Mozilla Firefox": "󰈹  $1",
      "(.*)Mozilla Firefox": "󰈹  Firefox",
      "(.*) - Google Chrome": "  $1",
      "(.*) — Zen Browser": "󰫫 $1",
      "(.*) - Visual Studio Code": "󰨞  $1",
      "(.*)Visual Studio Code": "󰨞  Code",
      "(.*) — Dolphin": "󰉋  $1",
      "(.*)Spotify": "󰓇  Spotify",
      "(.*)Steam": "󰓓  Steam",
      "YesPlayMusic": "󰎆  YesPlayMusic",
      "nv (.*)": "  $1",
      "QQ": " 󰘅  QQ",
      "微信": " 󰘑  WeChat"
    },
    "max-length": 20
  },
  "bluetooth": {
    "format": "",
    "format-disabled": "",
    "format-connected": " {num_connections}",
    "tooltip-format": " {device_alias}",
    "tooltip-format-connected": "{device_enumerate}",
    "tooltip-format-enumerate-connected": " {device_alias}"
  },
  "tray": {
    "icon-size": 21,
    "spacing": 10
  },
  "custom/music": {
    "format": "   {}",
    "escape": true,
    "interval": 1,
    "tooltip": false,
    "exec": "playerctl metadata --format='{{ title }}'",
    "on-click": "playerctl play-pause",
    "max-length": 50
  },
  "clock": {
    "timezone": "Asia/Shanghai",
    "format": "{:%H:%M}",
    "format-alt": "{:%b %d %Y %a}",
    "tooltip-format": "<tt><big>{calendar}</big></tt>"
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": ["", "", "", "", "", "", "", "", ""],
    "on-scroll-up": "brightnessctl set 1%+",
    "on-scroll-down": "brightnessctl set 1%-"
  },
  "niri/language": {
    "hyprland/language": {
      "format": " {}",
      "format-en": "EN(US)",
      "format-zh": "简中"
    }
  },
  "hyprland/language": {
    "format": " {}",
    "format-en": "EN(US)",
    "format-zh": "简中"
  },
  "cpu": {
    "interval": 1,
    "format": "󰍛",
    "format-alt": "󰍛 {usage}%"
  },
  "memory": {
    "interval": 1,
    "format": "󰾆 {percentage}%",
    "format-alt": "󰾅 {used}GB",
    "max-length": 10,
    "tooltip": true,
    "tooltip-format": " {used:0.1f}GB/{total:0.1f}GB"
  },
  "custom/gpuinfo": {
    "exec": " ~/.config/waybar/scripts/gpuinfo.sh",
    "return-type": "json",
    "format": "",
    "format-alt": " {}",
    "interval": 5,
    "tooltip": true,
    "max-length": 1000
  },
  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format-alt": "{icon} {capacity}%",
    "format-charging": " {capacity}%",
    "format-plugged": " {capacity}%",
    "format": "{time} {icon}",
    "format-icons": [" ", " ", " ", " ", " "]
  },
  "network": {
    "format-wifi": "󰤨  {essid}",
    "format-ethernet": "󱘖 Wired",
    "tooltip-format": "󱘖 {ipaddr}  {bandwidthUpBytes}  {bandwidthDownBytes}",
    "format-linked": "󱘖 {ifname} (No IP)",
    "format-disconnected": " Disconnected",
    "format-alt": "󰤨 {signalStrength}%",
    "interval": 5
  },
  "pulseaudio": {
    "format": "{icon} {volume}",
    "format-muted": " ",
    "on-click": "pavucontrol -t 3",
    "on-click-middle": "$HOME/.config/waybar/scripts/volumecontrol.sh -o m",
    "on-scroll-up": "$HOME/.config/waybar/scripts/volumecontrol.sh -o i",
    "on-scroll-down": "$HOME/.config/waybar/scripts/volumecontrol.sh -o d",
    "tooltip-format": "{icon} {desc} // {volume}%",
    "scroll-step": 5,
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", "", " "]
    }
  },
  "pulseaudio#microphone": {
    "format": "{format_source}",
    "format-source": "",
    "format-source-muted": " ",
    "on-click": "pavucontrol -t 4",
    "on-click-middle": "~/.config/waybar/scripts/volumecontrol.sh -i m",
    "on-scroll-up": "~/.config/waybar/scripts/volumecontrol.sh -i i",
    "on-scroll-down": "~/.config/waybar/scripts/volumecontrol.sh -i d",
    "tooltip-format": "{format_source} {source_desc} // {source_volume}%",
    "scroll-step": 5
  },
  "custom/lock": {
    "exec": "echo ; echo  lock",
    "on-click": "sh -c hyprlock",
    "format": "{}",
    "interval": 86400,
    "tooltip": true
  },
  "custom/power": {
    "format": "{}",
    "exec": "echo ; echo  shutdown",
    "on-click": "sh -c 'shutdown now'",
    "interval": 86400,
    "tooltip": true
  }
}
